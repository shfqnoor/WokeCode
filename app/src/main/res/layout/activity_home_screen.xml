<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2b5b9a"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    tools:layout_editor_absoluteY="81dp">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="233dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="243dp"
        android:layout_marginStart="21dp"
        android:text="Alarm 1"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/clock"
        android:layout_width="250dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="monospace"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/editButton1"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/editButton2"
        android:layout_alignTop="@+id/switch1"
        android:text="Edit"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="302dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="266dp"
        android:text="  Your Upcoming Alarms"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="104dp"
        tools:text="  Your Upcoming Alarms" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="233dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignTop="@+id/editButton2"
        android:text="Alarm 2"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/editButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="20dp"
        android:text="Edit"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="278dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="232dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/switch1"
        android:layout_marginBottom="85dp"
        android:text="Alarm 3"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="376dp" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/questionTitle"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_dialog_info"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="443dp" />

    <Button
        android:id="@+id/editButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switch3"
        android:layout_alignStart="@+id/editButton1"
        android:text="Edit"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="358dp" />

</RelativeLayout>